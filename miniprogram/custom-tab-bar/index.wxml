 <view class="cu-bar tabbar">
  <view wx:for="{{ list }}" 
    wx:key="index"
    data-url="{{item.pagePath}}" 
    data-index="{{ index }}"
    data-selected="{{ selected }}"
    bindtap="{{item.action}}" 
    class="action text-{{selected === index && selected !== 2 ? 'green' : 'gray'}} {{ index === 2 ? 'add-action' : '' }}">
    <view wx:if="{{item.type !== 'button'}}" class="icon-container" >
      <wux-icon size="24" type="{{item.icon}}"></wux-icon>
    </view>
    <wux-fab-button wx:else sAngle="{{ 240 }}" eAngle="{{ 120 }}" position="bottomCenter" theme="balanced" direction="circle" spaceBetween="{{ 10 }}" buttons="{{ buttons }}" />
      {{item.text}}
  </view>
</view>

 <wux-popup 
    position="bottom"
    maskClosable
    wux-content-class="popup-content-container"
    wux-footer-class="popup-footer-container"
    bind:close="onClose"
    visible="{{ visible }}">
    <scroll-view 
      class="background-image-scroll-container"
      scroll-x>
      <view class="background-image-container" style="width: {{ imageList.length * 80 }}px">
        <view
          class="image-parent"
          wx:for="{{ imageList }}"
          wx:for-item="imageSrc"
          wx:key="{{ imageSrc }}"
          data-src="{{ imageSrc }}"
          bind:tap="onImageSelect">
          <image
            class="picture"
            wx:if="{{ !!imageSrc }}"
            src="{{ imageSrc }}"
            mode="widthFix"
            binderror="onImageLoadError"
          />
          <!-- <view class="image" style="background-image:url({{ imageSrc }})"/> -->
        </view>
      </view>
    </scroll-view>
  </wux-popup>