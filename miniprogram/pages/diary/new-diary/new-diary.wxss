.new-diary-container {
  background-color: #ffffff;
  height: 100%;
  display: flex;
  flex-direction: column; 
  align-items: center;
}

.new-diary-container .new-diary-title {
  text-align: center;
  font-size: 44rpx;
  font-weight: 500;
  margin-top: 30px;
}

.new-diary-container .new-diary-date {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 32px;
  margin: 20px 0;
}

.new-diary-container .new-diary-date  .new-diary-date-text {
  margin-left: 5px;
  font-size: 32rpx;
}

.new-diary-container .mood-container {
  align-self: center;
  display: flex;
  margin: 20px;
}

.new-diary-container .mood-container > view {
  margin: 0 10px;
}

