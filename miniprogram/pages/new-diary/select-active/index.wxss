.new-diary-edit-action {
  position: fixed;
  bottom: 80px;
  right: 20px;
  color: #39b54a;
}

.select-active-container .select-active-title {
  display: flex;
  justify-content: center;
  margin-top: 24px;
  align-items: center;
}

.select-active-container .select-active-title .title {
  margin-left: 3px;
  font-size: 42rpx;
}

.active-list-contaienr {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 10px;
}

.active-list-contaienr .active {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 5px;
}

.active-list-contaienr .active .active-icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #666; 
  display: flex;
  align-items: center;
  justify-content: center;
}

.active-list-contaienr .active .active-icon.selected-active {
  border-color: #a5673f ;
  background-color: #a5673f;
  color: #fff;
}

.active-list-contaienr .active.new-active {
  font-size: 12px;
}

.select-active-container .textarea-container {
  margin: 20px 10px 0;
  border: 1px solid #ddd;
  padding: 5px;
  border-radius: 5px;
}

.select-active-container .textarea-container .textarea {
  height: 50px;
}