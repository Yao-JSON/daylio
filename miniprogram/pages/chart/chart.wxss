.empty-container {
  height: 80%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.date-select-container {
  margin: 5px 0;
}
.month-select-container {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0,0, 0.3);
  color: #fff;
}

.month-select-container .date-text {
  margin: 6px 20px;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.month-select-container .date-text .start-time {
  margin-right: 5px;
}

.month-select-container .date-text .end-time {
  margin-left: 5px; 
}

.picker-view-container {
  height: 100px;
  width: 100%;
}
.picker-view-container .date-title {
  margin: 10px 0;
}

.picker-view-container .picker-view-item {
  line-height: 30px;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/*== 图表 ===*/

.chart-container .chart {
  height: 200px;
  margin: 5px 0;
}


/*== 分类 ==*/
.classify-list-container {

}


.classify-list-container .list-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e7ebed; 
}

.classify-list-container .list-container:first-child {
  border-top: 1px solid #e7ebed;
}

.classify-list-container .list-container > view {
  margin: 10px 25px;
  width: 33%;
}

.classify-list-container .list-container > view.mood-title {
  display: flex;
}

.classify-list-container .list-container > view.mood-title  .mood-list-icon {
  margin-right: 5px;
}

.classify-list-container .list-container > view.mood-percent {
  width: 50px;
}

.classify-list-container .list-container > view.mood-num {
  text-align: right;
}