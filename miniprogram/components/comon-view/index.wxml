<scroll-view
  scroll-y
  style="height: {{ windowHeight }}px"
  class="wux-class "
  catch:longpress="onLongPress">
  <wux-popup 
    position="bottom"
    maskClosable
    wux-content-class="popup-content-container"
    wux-footer-class="popup-footer-container"
    bind:close="onClose"
    visible="{{ visible }}">
    <scroll-view 
      class="background-image"
      scroll-x>

    </scroll-view>
  </wux-popup>
  <slot></slot>
</scroll-view>
  